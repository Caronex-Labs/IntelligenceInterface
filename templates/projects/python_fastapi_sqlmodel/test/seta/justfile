# Development setup
setup:
    @echo "ðŸš€ Setting up Python FastAPI SQLModel template development environment..."
    @which uv > /dev/null || (echo "âŒ UV is required. Install from: https://docs.astral.sh/uv/" && exit 1)
    uv sync
    @echo "âœ… Development environment setup complete!"
    @echo ""
    @echo "Next steps:"
    @echo "  just test              # Run all tests"
    @echo "  just generate user     # Generate a sample domain"
    @echo "  just coverage-html     # View test coverage"

# Install dependencies
install:
    @echo "ðŸ“¦ Installing dependencies with UV..."
    uv sync

# Check required tools
check-tools:
    @echo "ðŸ” Checking required development tools..."
    @which uv > /dev/null && echo "âœ… UV is installed" || (echo "âŒ UV is not installed" && exit 1)
    @which python > /dev/null && echo "âœ… Python is installed" || echo "âŒ Python is not installed"
    @echo "Tool check complete!"

# Install the CLI tool in your system
install-cli:
    @echo "Installing CLI..."
    uv tool install . -e

# Testing commands
test *args:
    @echo "ðŸ§ª Running all tests..."
    uv run python -m pytest {{args}} -v

test-unit *args:
    @echo "ðŸ”¬ Running unit tests..."
    uv run python -m pytest tests/unit/ {{args}} -v

test-integration *args:
    @echo "ðŸ”— Running integration tests..."
    uv run python -m pytest tests/integration/ {{args}} -v

test-bdd *args:
    @echo "ðŸ“‹ Running BDD tests..."
    uv run python -m pytest tests/bdd/ {{args}} -v

test-e2e *args:
    @echo "ðŸŽ¯ Running end-to-end tests..."
    uv run python -m pytest tests/e2e/ {{args}} -v

test-performance:
    @echo "âš¡ Running performance tests..."
    uv run python -m pytest tests/performance/ -v --tb=short

test-watch:
    @echo "ðŸ‘€ Running tests in watch mode..."
    uv run python -m pytest --watch tests/

# Coverage commands
coverage:
    @echo "ðŸ“Š Running tests with coverage..."
    uv run coverage run -m pytest
    uv run coverage report
    @echo ""
    @echo "For detailed HTML report, run: just coverage-html"

coverage-html:
    @echo "ðŸ“Š Generating HTML coverage report..."
    uv run coverage run -m pytest
    uv run coverage html
    @echo "ðŸ“„ Coverage report generated: htmlcov/index.html"
    @echo "ðŸ’¡ Open in browser: open htmlcov/index.html"

coverage-unit:
    @echo "ðŸ“Š Unit test coverage..."
    uv run coverage run -m pytest tests/unit/
    uv run coverage report

coverage-integration:
    @echo "ðŸ“Š Integration test coverage..."
    uv run coverage run -m pytest tests/integration/
    uv run coverage report

# Code generation commands
generate domain *args:
    @echo "âš™ï¸ Generating domain: {{domain}}"
    @if [ ! -f "app/domain/{{domain}}/domain.yaml" ]; then \
        echo "âŒ Configuration not found: app/domain/{{domain}}/domain.yaml"; \
        echo "ðŸ’¡ Create configuration first with: just scaffold {{domain}}"; \
        exit 1; \
    fi
    uv run python cli/generate/main.py --domain {{domain}} {{args}}
    @echo "âœ… Domain '{{domain}}' generated successfully"
    @echo "ðŸ’¡ Validate with: just validate-generated output/{{domain}}"

demo domain:
    @echo "ðŸŽ¬ Running complete demo for domain: {{domain}}"
    just scaffold {{domain}}
    just generate {{domain}}
    just validate-generated "output/{{domain}}"
    @echo "ðŸŽ‰ Demo complete for '{{domain}}' domain!"

scaffold domain:
    @echo "ðŸ“ Creating basic configuration for domain: {{domain}}"
    @mkdir -p "app/domain/{{domain}}"
    @if [ ! -f "app/domain/{{domain}}/domain.yaml" ]; then \
        echo "domain:" > "app/domain/{{domain}}/domain.yaml"; \
        echo "  name: {{domain|title}}" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "  plural: {{domain|title}}s" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "entities:" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "  - name: {{domain|title}}" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "    fields:" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "      - name: name" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "        type: str" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "        required: true" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "      - name: description" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "        type: Optional[str]" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "        required: false" >> "app/domain/{{domain}}/domain.yaml"; \
        echo "âœ… Configuration created: app/domain/{{domain}}/domain.yaml"; \
        echo "ðŸ’¡ Edit the configuration and run: just generate {{domain}}"; \
    else \
        echo "â„¹ï¸ Configuration already exists: app/domain/{{domain}}/domain.yaml"; \
    fi

# Validation commands
validate-templates:
    @echo "ðŸ” Validating Jinja2 templates..."
    uv run python cli/validate/template_linter.py --path app/ --check-syntax
    @echo "âœ… Template validation complete"

validate-configs:
    @echo "ðŸ” Validating YAML configurations..."
    uv run python cli/validate/config_validator.py --path app/
    @echo "âœ… Configuration validation complete"

validate-generated path:
    @echo "ðŸ” Validating generated code at: {{path}}"
    @if [ ! -d "{{path}}" ]; then \
        echo "âŒ Path not found: {{path}}"; \
        exit 1; \
    fi
    @echo "Running generated tests..."
    uv run python -m pytest "{{path}}/tests/" -v
    @echo "Checking code quality..."
    uv run ruff check "{{path}}/"
    @echo "âœ… Generated code validation complete"

validate-all:
    @echo "ðŸ” Running all validation checks..."
    just validate-templates
    just validate-configs
    just lint
    @echo "âœ… All validation checks complete"

# Linting and formatting
lint:
    @echo "ðŸ” Running all linters..."
    just validate-templates
    just validate-configs
    @echo "Checking Python code with ruff..."
    uv run ruff check .
    @echo "Checking code formatting..."
    just format-check
    @echo "âœ… Linting complete"

lint-fix:
    @echo "ðŸ”§ Running linters with auto-fix..."
    @echo "Fixing Python code issues..."
    uv run ruff check --fix .
    @echo "Formatting code..."
    just format
    @echo "âœ… Auto-fix complete"

format:
    @echo "ðŸŽ¨ Formatting Python code with Black..."
    uv run black .
    @echo "âœ… Code formatting complete"

format-check:
    @echo "ðŸŽ¨ Checking code formatting..."
    uv run black --check .

# Development workflow commands
dev-check:
    @echo "ðŸš€ Running quick development checks..."
    just format-check
    just lint
    just test-unit --tb=short
    @echo "âœ… Development checks complete"

full-check:
    @echo "ðŸš€ Running complete validation pipeline..."
    just clean
    just lint
    just test
    just coverage
    @echo "âœ… Full validation complete"

pre-commit:
    @echo "ðŸš€ Running pre-commit checks..."
    just format
    just lint
    just test-unit
    @echo "âœ… Pre-commit checks complete"

ci-check:
    @echo "ðŸš€ Running CI validation pipeline locally..."
    just check-tools
    just install
    just format-check
    just validate-all
    just test
    just coverage
    @echo "âœ… CI validation complete"

# Benchmarking commands
benchmark:
    @echo "âš¡ Running all performance benchmarks..."
    uv run python -m pytest tests/performance/ --benchmark-only -v

benchmark-generation:
    @echo "âš¡ Benchmarking code generation speed..."
    uv run python -m pytest tests/performance/test_generation_speed.py -v

benchmark-templates:
    @echo "âš¡ Benchmarking template rendering speed..."
    uv run python -m pytest tests/performance/test_template_rendering_speed.py -v

# Cleanup commands
clean:
    @echo "ðŸ§¹ Cleaning build artifacts and temporary files..."
    find . -type d -name "__pycache__" -delete 2>/dev/null || true
    find . -type d -name "*.egg-info" -delete 2>/dev/null || true
    find . -name "*.pyc" -delete 2>/dev/null || true
    find . -name "*.pyo" -delete 2>/dev/null || true
    rm -rf .pytest_cache/ 2>/dev/null || true
    rm -rf build/ dist/ 2>/dev/null || true
    @echo "âœ… Cleanup complete"

clean-cache:
    @echo "ðŸ§¹ Cleaning Python and pytest cache files..."
    find . -type d -name "__pycache__" -delete 2>/dev/null || true
    rm -rf .pytest_cache/ 2>/dev/null || true
    @echo "âœ… Cache cleanup complete"

clean-coverage:
    @echo "ðŸ§¹ Cleaning coverage reports..."
    rm -rf htmlcov/ .coverage coverage.xml 2>/dev/null || true
    @echo "âœ… Coverage cleanup complete"

# Advanced testing scenarios
test-smoke:
    @echo "ðŸ’¨ Running smoke tests (critical functionality only)..."
    uv run python -m pytest -m "not slow" tests/unit/ tests/integration/ --tb=short

test-slow:
    @echo "ðŸŒ Running slow tests (performance and complex scenarios)..."
    uv run python -m pytest -m "slow" tests/

test-parallel:
    @echo "âš¡ Running tests in parallel..."
    uv run python -m pytest -n auto

test-verbose:
    @echo "ðŸ“¢ Running tests with maximum verbosity..."
    uv run python -m pytest -vvv --tb=long

