    @echo "   just full-check       # Complete validation"
    @echo "   just benchmark        # Performance validation"

# Health check
health:
    @echo "ðŸ¥ System health check..."
    just check-tools
    @echo "Testing basic functionality..."
    uv run python -c "import yaml, jinja2, pydantic; print('âœ… Core dependencies working')"
    @echo "Checking test infrastructure..."
    uv run python -m pytest --collect-only tests/ > /dev/null && echo "âœ… Tests discoverable"
    @echo "ðŸ’š System healthy!"

# Version information
version:
    @echo "ðŸ“‹ Version information:"
    @echo "Python: $(python --version 2>&1)"
    @echo "UV: $(uv --version 2>&1)"
    @echo "Pytest: $(uv run python -c 'import pytest; print(pytest.__version__)' 2>/dev/null || echo 'Not installed')"
    @echo "Template system: Python FastAPI SQLModel v0.1.0"